{
  "root": true,
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "overrides": [
    {
      "files": ["client/**/*.{js,jsx,ts,tsx}"],
      "env": {
        "browser": true,
        "node": false
      },
      "extends": ["eslint:recommended", "react-app"],
      "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": {
          "jsx": true
        }
      }
    },
    {
      "files": ["server/**/*.js"],
      "env": {
        "node": true
      },
      "parserOptions": {
        "sourceType": "script"
      }
    }
  ]
}
